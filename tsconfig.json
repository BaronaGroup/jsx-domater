{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "target": "es2016",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "createDomaterElement",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "lib": [
      "es2016",
      "es2017",
      "dom"
    ],
    "module": "commonjs"
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}